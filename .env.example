# Environment Variables for FMCB Website
# Copy this file to .env.local and add your environment variables here

# Site Configuration
NEXT_PUBLIC_SITE_URL="https://fmcb.vercel.app"
NEXT_PUBLIC_SITE_NAME="FMCB"

# Email Configuration (Resend API)
RESEND_API_KEY="your-resend-api-key-here"

# Contact Form Configuration
CONTACT_EMAIL="email@gmail.com"  # Test email - change to church email later

# Optional: Analytics
# NEXT_PUBLIC_GA_ID="G-XXXXXXXXXX"

# Optional: Map Configuration
# NEXT_PUBLIC_GOOGLE_MAPS_API_KEY="your-google-maps-api-key"

# YouTube (Data API v3)
YT_API_KEY=your_youtube_api_key_here
# If you want to hardcode later, you can set this. Otherwise the code resolves it from the handle.
YT_CHANNEL_ID=
# Public (safe) handle for client-side display only if needed
NEXT_PUBLIC_YT_HANDLE=@FMCBCHURCH

# Admin Portal Configuration
PRAYER_ADMIN_SECRET="your-secure-admin-password-here"
